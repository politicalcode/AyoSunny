<com.example.views.touch.TouchViewGroup xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/v_root1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@android:color/holo_orange_light"
    android:paddingLeft="20dp" >

    <com.example.views.touch.TouchViewGroupChild
        android:id="@+id/v_root2"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_gravity="center"
        android:background="@android:color/holo_green_light"
        android:paddingLeft="20dp" >

        <com.example.views.touch.TouchView
            android:id="@+id/v_view1"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:background="@android:color/holo_purple" />

        <com.example.views.touch.TouchView
            android:id="@+id/v_view2"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:background="@android:color/holo_blue_light" />
    </com.example.views.touch.TouchViewGroupChild>

</com.example.views.touch.TouchViewGroup>