<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="请将图片放到(你的手机对应的dpi)目录下，并输入id：" />

        <EditText
            android:id="@+id/et_res_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="R.drawable.ic_launcher" />
        
        <Button 
            android:text="从本应用选择"
            android:id="@+id/btn_pick_from_app"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            />
        <Button 
            android:text="从android包里选择"
            android:id="@+id/btn_pick_from_android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            />
        <Button 
            android:text="从其他package选择--引入的库"
            android:id="@+id/btn_pick_from_others"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            />
        <Button 
            android:text="好了"
            android:id="@+id/btn_add_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" 
                android:background="@drawable/icon_xdpi_65x65"
                />

            <ImageView
                android:id="@+id/iv_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                 />
        </LinearLayout>

        <SeekBar
            android:id="@+id/sb_size"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp" />

        <TextView
            android:textIsSelectable="true"
            android:id="@+id/tv_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp" />

        <Button
            android:layout_marginTop="30dp"
            android:text="看看手机信息"
            android:id="@+id/btn_add_xx"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            />
    </LinearLayout>

</ScrollView>