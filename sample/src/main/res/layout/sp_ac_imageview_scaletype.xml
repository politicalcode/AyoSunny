
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#ffffff"
    android:layout_marginTop="20dp"
    >

    <ImageView
        android:layout_marginTop="10dp"
        android:id="@+id/iv"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/d_gradient_drawable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/animate_shower" />
    
    <TextView
        android:layout_marginTop="10dp"
        android:id="@+id/tv_info"
        android:background="@drawable/d_gradient_drawable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#b5c4a3"
        android:text="" />


    <TextView
        android:id="@+id/et_w"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="()" />

    <SeekBar
        android:id="@+id/seekBarW"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:max="70"
        android:progress="20"
        android:progressDrawable="@drawable/scrubber_progress" />

    <SeekBar
        android:id="@+id/seekBarH"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:max="70"
        android:progress="10"
        android:progressDrawable="@drawable/scrubber_progress" />


    <Spinner 
        android:id="@+id/sp_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
<TextView
    android:id="@+id/tv_explain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="" />
</LinearLayout>
</ScrollView>